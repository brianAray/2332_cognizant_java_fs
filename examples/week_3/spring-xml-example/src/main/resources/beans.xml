<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    Bean with Property Injection-->
    <bean id="userService" class="org.example.service.UserServiceImpl">
        <property name="defaultUsername" value="John Doe"/>
        <property name="defaultEmail" value="john@example.com"/>
    </bean>

<!--    Bean with constructor injection-->
    <bean id="defaultUser" class="org.example.model.User">
        <constructor-arg index="0" value="Jane Smith"/>
        <constructor-arg index="1" value="jane@example.com"/>
    </bean>

<!--    Bean referencing another bean-->
    <bean id="adminUser" class="org.example.model.User">
        <property name="name" value="Admin"/>
        <property name="email" value="admin@example.com"/>
    </bean>

<!--    Prototype scoped bean-->
    <bean id="prototypeUser" class="org.example.model.User" scope="prototype">
        <property name="name" value="Prototype User"/>
        <property name="email" value="prototype@example.com"/>
    </bean>

</beans>